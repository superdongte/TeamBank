<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".GenderActivity"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="성별을 선택하세요"
                android:textSize="30sp"
                android:fontFamily="@font/katuri"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/woman"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="50dp"
                android:src="@drawable/woman" />

            <ImageView
                android:id="@+id/man"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/man" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="연령을 선택해주세요"
                android:fontFamily="@font/katuri"
                android:gravity="center_horizontal"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:columnCount="2">
            <ImageView
                android:id="@+id/age1"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/age_10"/>
            <ImageView
                android:id="@+id/age2"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/age_20"/>
            <ImageView
                android:id="@+id/age3"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/age_30"/>
            <ImageView
                android:id="@+id/age4"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/age_40"
                />
            <ImageView
                android:id="@+id/age5"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/age_50_2"
                app:layout_columnSpan="2"
                app:layout_gravity="center"/>


        </androidx.gridlayout.widget.GridLayout>
    </LinearLayout>
</layout>
