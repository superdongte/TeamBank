<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#EEF8FF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#EEF8FF"
            tools:context=".CategoryActivity">
            <ImageView
                android:id="@+id/gifimage2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintTop_toTopOf="parent" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp">

                <TextView
                    android:textAlignment="center"
                    android:paddingVertical="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="원하시는 상품은?"
                    android:textSize="40sp"
                    android:fontFamily="@font/katuri"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp">

                <Button
                    android:id="@+id/deplist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/katuri"
                    android:paddingVertical="10dp"
                    android:text="전체상품"
                    android:textSize="20dp"
                    android:theme="@style/Ripple"
                    app:rippleColor="@color/t" />

                <Button
                    android:id="@+id/shortinvest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/katuri"
                    android:paddingVertical="10dp"
                    android:text="단기적금"
                    android:textSize="20dp"
                    android:theme="@style/Ripple"
                    app:rippleColor="@color/teal_200" />

                <Button
                    android:id="@+id/longinvest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/katuri"
                    android:paddingVertical="10dp"
                    android:text="장기예금"
                    android:textSize="20dp"
                    app:rippleColor="@color/teal_200" />
            </LinearLayout>
            <WebView
                android:id="@+id/dkwebview1"
                android:layout_width="match_parent"
                android:layout_height="300dp" />
        </LinearLayout>
    </ScrollView>
</layout>