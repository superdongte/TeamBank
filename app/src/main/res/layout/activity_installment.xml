<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".InstallmentActivity">

        <LinearLayout
            android:id="@+id/linearText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/itemPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1,500,000"
                    android:textColor="#ffff0000"
                    android:textSize="20sp"
                    android:fontFamily="@font/katuri">

                </TextView>

                <TextView
                    android:id="@+id/installText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="원 기준, "
                    android:textSize="20sp"
                    android:fontFamily="@font/katuri">

                </TextView>

                <TextView
                    android:id="@+id/itemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="노트북"
                    android:textColor="#ffff0000"
                    android:textSize="25sp"
                    android:fontFamily="@font/katuri">

                </TextView>
                <TextView
                    android:id="@+id/installText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="을 위한"
                    android:textSize="20sp"
                    android:fontFamily="@font/katuri">

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/installText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="최고"
                    android:textSize="25sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/katuri">

                </TextView>

                <TextView
                    android:id="@+id/installText4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 금리는 "
                    android:textSize="20sp"
                    android:fontFamily="@font/katuri">

                </TextView>


                <TextView
                    android:id="@+id/installment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.3%"
                    android:textColor="#ffff0000"
                    android:textSize="20sp"
                    android:fontFamily="@font/katuri">
                </TextView>

                <TextView
                    android:id="@+id/installText5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="입니다."
                    android:textSize="20sp"
                    android:fontFamily="@font/katuri">

                </TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical">



                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="true"
                    android:fontFamily="@font/katuri"
                    android:text="희망 가꾸기 적금"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"/>

                <View
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:background="#000000"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_marginBottom="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/katuri"
                        android:text="기본금리 "
                        android:textSize="11sp"
                        android:textColor="@android:color/darker_gray"/>
                    <TextView

                        android:id="@+id/textView3"
                        android:layout_marginBottom="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/katuri"
                        android:text="1.8%"
                        android:textSize="11sp"
                        android:textColor="#000000"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:gravity="top"
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/katuri"
                        android:text="우대금리 "
                        android:textSize="11sp"
                        android:textColor="@android:color/darker_gray"/>
                    <TextView

                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/katuri"
                        android:text="1.8%"
                        android:textSize="11sp"
                        android:textColor="#000000"/>
                </LinearLayout>



                <LinearLayout
                    android:layout_marginBottom="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:fontFamily="@font/katuri"
                        android:textSize="11sp"
                        android:textColor="@android:color/darker_gray"
                        android:text="기본금리 "
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="12개월"
                        android:fontFamily="@font/katuri"
                        android:textSize="13sp"
                        android:textColor="#000000"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text=" 간 "
                        android:fontFamily="@font/katuri"
                        android:textSize="13sp"
                        android:textColor="#000000"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="월 "
                        android:fontFamily="@font/katuri"
                        android:textSize="13sp"
                        android:textColor="#000000"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="107,984"
                        android:fontFamily="@font/katuri"
                        android:textSize="13sp"
                        android:textColor="#000000"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text=" 원 "
                        android:fontFamily="@font/katuri"
                        android:textSize="13sp"
                        android:textColor="#000000"
                        />


                </LinearLayout>



            </LinearLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/goodsList"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            app:layout_constraintTop_toBottomOf="@+id/linearText"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
